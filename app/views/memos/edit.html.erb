<div class="container">
  <%= form_for @memo do |f| %> <!-- わざわざpatchと書かなくてもActiveRecordが勝手に判断してくれるらしい -->
    <div class="form-group" style="margin: 8px 0">
      <%= f.text_field:title, placeholder:'title' %>
    </div>
    <div class="form-group" style="margin: 8px 0">
    <%= f.text_area:text, placeholder:'Write a note.', style: 'width: 100%;height: 300px;' %>
    </div>
    <div class="form-group" style="margin: 8px 0">
      <%= f.text_field:image, placeholder:'image URL' %>
    </div>
    <div class="form-group" style="margin: 1px 0">
        <%= f.button :edit, :class => 'btn-primary' %>
    </div>
  <% end %>
</div>
